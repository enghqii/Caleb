<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/act_main"
    android:background="@drawable/caleb_bg">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/act_main_btn_start"
        android:src="@drawable/caleb_btn_start"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Setting"
        android:id="@+id/act_main_btn_setting"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/caleb_btn_setting"
        android:paddingTop="160px" />

</RelativeLayout>